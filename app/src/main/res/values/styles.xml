<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ViewStyle" parent="AppTheme">
        <item name="android:onClick">onClick</item>
    </style>

    <style name="DividerStyle" parent="ViewStyle">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="LinearLayoutStyle" parent="ViewStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewStyle" parent="ViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LeftTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="RightTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TextViewCategoryStyle" parent="ViewStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextViewStatusStyle" parent="ViewStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/tv_accent</item>
    </style>

    <style name="TextViewProblemTextStyle" parent="ViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
